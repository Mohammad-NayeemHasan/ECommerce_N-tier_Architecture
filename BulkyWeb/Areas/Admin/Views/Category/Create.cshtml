@model Bulky.Models.Models.Category
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form method="post">
        <div class="row pt-4">
            <div class="col-12 mb-3">
                <h2 class="text-primary">Create New Category</h2>
                <hr />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                @* input tag helper *@
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>