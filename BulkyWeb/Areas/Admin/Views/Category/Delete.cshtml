@model Bulky.Models.Models.Category

<div class="container mt-4">
    <h2 class="text-danger">Delete Category</h2>
    <hr />

    <h5>Are you sure you want to delete this category?</h5>

    <dl class="row mt-4">
        <dt class="col-sm-3">Category Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Display Order</dt>
        <dd class="col-sm-9">@Model.DisplayOrder</dd>
    </dl>

    <!-- ✅ Important: action="Delete" not DeletePost -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </form>
</div>
