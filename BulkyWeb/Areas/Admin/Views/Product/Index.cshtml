@{
    ViewData["Title"] = "Product List";
}

<div class="container-fluid px-5 py-4 col-12">
    <!-- container-fluid দিয়ে page full width -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary fs-1">Product List</h2> 
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <!-- responsive table -->
        <table id="tblData" class="table table-bordered table-striped align-middle table-hover">
            <thead class="table-primary text-center fs-5">
                <!-- fs-5 font size bigger -->
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>List Price</th>
                    <th>Price</th>
                    <th>Price 50</th>
                    <th>Price 100</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody class="text-center fs-6">
                <!-- Data will be populated by product.js -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/product.js"></script>
}
