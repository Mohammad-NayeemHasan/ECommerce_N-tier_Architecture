@model Bulky.Models.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Category</h2>
    <hr />

    <h5>Are you sure you want to delete this Product?</h5>

    <dl class="row mt-4">
        <dt class="col-sm-3">Product Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9">@Model.Author</dd>

        <dt class="col-sm-3">ISBN</dt>
        <dd class="col-sm-9">@Model.ISBN</dd>

        <dt class="col-sm-3">ListPrice</dt>
        <dd class="col-sm-9">@Model.ListPrice</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price</dd>

        <dt class="col-sm-3">Price100</dt>
        <dd class="col-sm-9">@Model.Price100</dd>

        <dt class="col-sm-3">Price50</dt>
        <dd class="col-sm-9">@Model.Price50</dd>
    </dl>

    <!-- ✅ Important: action="Delete" not DeletePost -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </form>
</div>

